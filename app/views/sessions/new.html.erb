<h1>ログイン</h1>

<div class="form">
    <%= form_with(url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form_item' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form_item' %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>